<!DOCTYPE html>
<html>
<head>
    {{! Document Settings }}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />

    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" href="{{asset "favicon.ico"}}">

    {{! Styles }}
    <link rel="stylesheet" type="text/css" href="{{asset "css/screen.css"}}" />
    <link rel="stylesheet" type="text/css" href="{{asset "fonts/genericons/genericons.css"}}" />

    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<body class="{{body_class}}" {{#if @blog.cover}}style="background: url({{@blog.cover}}) center center fixed;"{{/if}}>
<div id="page">

    {{! site logo and description }}
    <header class="site-head">
        <div class="vertical">
            <div class="site-head-content inner">
                <a class="blog-logo" href="{{@blog.url}}">
                {{#if @blog.logo}}
                    <img src="{{@blog.logo}}" alt="Blog Logo" />
                {{/if}}
                <h1 class="blog-title">{{@blog.title}}</h1>
                </a>
            </div>
        </div>
    </header>
    <div id="content" class="site-content">

    <div id="primary" class="content-area">
    <div id="main" class="site-main" role="main">

    {{! Everything else gets inserted here }}
    {{{body}}}

    </div><!-- #primary -->
    </div><!-- #main -->

    <div id="secondary" class="widget-area" role="complementary">

            <aside id="search" class="widget widget_search">
                <h1 class="widget-title">About This Site</h1>
                <p>{{@blog.description}}</p>
            </aside>

            <aside id="social" class="widget">
                <ul>
                    <li><a href="http://twitter.com/precode_io"><span class="genericon genericon-twitter"></span> Twitter</a></li>
                    <li><a href="http://github.com/precode"><span class="genericon genericon-github"></span> GitHub</a></li>
                    <li><a href="{{@blog.url}}/rss/"><span class="genericon genericon-feed"></span> RSS Subscribe</a></li>
                </ul>
            </aside>

    </div><!-- #secondary -->

    </div><!-- .site-content -->

    <footer class="site-footer">
        <div class="inner">
             <section class="copyright">&copy; {{date format="YYYY"}} <a href="{{@blog.url}}/">{{@blog.title}}</a> &bull; Two Column by <a href="http://precode.io">Precode</a></section>
             <section class="poweredby">Proudly published with <a class="icon-ghost" href="https://ghost.org">Ghost</a></section>
        </div>
    </footer>

    </div><!-- #page -->

    {{! Ghost outputs important scripts and data with this tag }}
    {{ghost_foot}}

    {{! The main JavaScript file for Blank One }}
    <script type="text/javascript" src="{{asset "js/jquery.fitvids.js"}}"></script>
    <script type="text/javascript" src="{{asset "js/index.js"}}"></script>

</body>
</html>
